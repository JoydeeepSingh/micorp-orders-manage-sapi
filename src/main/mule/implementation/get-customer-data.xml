http://www.mulesoft.org/schema/mule/salesforce http://www.mulesoft.org/schema/mule/salesforce/current/mule-salesforce.xsd">
	<sub-flow name="get-customer-impl-sub-flow" doc:id="e06bb53d-db47-4618-b429-96636f077960" >
		<logger level="INFO" doc:name="Start Logger" doc:id="945cd9d6-6a2d-41f8-ba6b-bb3e87d8b41c" message="Start"/>
		<set-variable value="#[attributes.uriParams.'orderId']" doc:name="var : orderId" doc:id="32b82d4d-d270-41ab-b572-38a2538e671f" variableName="orderId"/>
		<salesforce:query doc:name="Get Customer Data" doc:id="05c0c1f4-d2cb-4fd3-9ea4-a10008593966" config-ref="Salesforce_Config">
			<salesforce:salesforce-query ><![CDATA[SELECT fields (custom) from customer__c where Id=':orderId' limit 100]]></salesforce:salesforce-query>
			<salesforce:parameters ><![CDATA[#[{
	orderId : vars.orderId
}]]]></salesforce:parameters>
		</salesforce:query>
		<ee:transform doc:name="Output" doc:id="c66e47b3-2d71-42c1-a5e2-2bd22d1ea4ff" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
			</ee:message>
		</ee:transform>
	</sub-flow>
</mule>
