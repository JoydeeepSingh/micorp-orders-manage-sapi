                    <ee:message>
                        <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
    "appName": app.name,
    "statusCode": 404,
    "errorDescription": "Not Found",
    "correlationId": vars.correlationId default correlationId
}]]></ee:set-payload>
                    </ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus"><![CDATA[501]]></ee:set-variable>
                    </ee:variables>
                </ee:transform>
			<logger level="ERROR" doc:name="LOG : Error Message" doc:id="dfb6cb02-509f-4289-be74-27dfa526fdb7" message="#[payload]" />
            
</on-error-propagate>
        </error-handler>
	
	</mule>
