                        <ee:set-variable variableName="httpStatus"><![CDATA[404]]></ee:set-variable>
                    </ee:variables>
                </ee:transform>
			<logger level="ERROR" doc:name="LOG : Error Message" doc:id="2819daa4-092e-464d-bf55-cba0567bfedc" message="#[payload]" />
            
</on-error-propagate>
